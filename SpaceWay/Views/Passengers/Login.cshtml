@model SpaceWay.Models.Passenger

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <form id="login-form" class="form" action="Login" method="post">
        <h3 class="text-center text-info">Login</h3>
        <hr />
        <div class="row justify-content-md-center">
            <div class="col-6">
                <div class="form-group">
                    <label>Username:</label><br />
                    <input type="text" name="UN" class="form-control" aria-describedby="Username" placeholder="Enter Username"><br />
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })<br />
                </div>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-6">
                <div class="form-group">
                    <label>Password:</label><br />
                    <input type="password" name="PW" class="form-control" aria-describedby="Username" placeholder="Enter password"><br />
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })<br />
                </div>
            </div>

        </div>
        <div class="row justify-content-md-center">
            <div class="col-auto">
            <input type="submit" value="Login" class="btn btn-default" />
                </div>
        </div>
    </form>
    </div>

