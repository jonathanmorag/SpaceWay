@model SpaceWay.Models.Flight
@{
    ViewBag.Title = "SearchFlight";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container">
            <div class="row">
                <div class="col">
                    <h4>Book A Flight</h4>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <select class = "form-control" id="lvl" name="lvl">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                    @Html.DropDownList("OriginID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                    @Html.DropDownList("DestinationID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                    <input id="departure" name="departure" type="date" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                    <input id="arrival" name="arrival" type="date" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-2 col-md-10">
                    <div class="form-group">
                    <input type="submit" value="Search Flight" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
        <div class="form-group">
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

