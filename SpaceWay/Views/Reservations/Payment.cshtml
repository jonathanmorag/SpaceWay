@model SpaceWay.Models.Reservation


@*@using (Html.BeginForm("FinalPayment", "Reservations"))*@
@using (Html.BeginForm("FinalPayment", "Reservations", FormMethod.Post, new { id = "paymentform" , enctype = "multipart/form-data", onsubmit = "return onSubmit()" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PassengerID)
    @Html.HiddenFor(model => model.OrderDate)
    @Html.HiddenFor(model => model.OutboundID)
    @Html.HiddenFor(model => model.InboundID)
    @Html.HiddenFor(model => model.NumOfTickets)
    @Html.HiddenFor(model => model.TotalPrice)

    <div class="form-horizontal">
        <br />
        <h1>Reservation Summary</h1>
        <br />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NumOfTickets)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumOfTickets)
            </dd>
        </dl><br />

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TotalPrice)
            </dd>
            <dt>
                <br /><br />
                @Html.Label("Credit Card:")
            </dt>
            <dd>
                <br /><br />
                <input type="tel" name="creditcard" title="Credit Card" style="color:#888;"
                       value="enter card digits here" onfocus="inputFocus(this)" onblur="inputBlur(this)" />
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col">
            <input type="submit" value="Complete Purchase" class="btn btn-default" />
        </div>
    </div>
    <script>
        function inputFocus(i) {
            if (i.value == i.defaultValue) { i.value = ""; i.style.color = "#000"; }
        }
        function inputBlur(i) {
            if (i.value == "") { i.value = i.defaultValue; i.style.color = "#888"; }
        }
        function onSubmit() {
            alert('Successfully Purchased Tickets, E-tickets have been sent to your Email');
            document.getElementById("paymentform").submit();
        }
    </script>
}