@{
    bool checkAdmin()
    {   
        if (Session["isAdmin"]=="1")
            return true;
        return false;
    }

    var welcomeText = "";
    if (Session["Username"] != null)
    {
        welcomeText = "Welcome " + Session["Username"];
    }

}

<li >@if (checkAdmin()==true) { @Html.ActionLink("Passengers", "Search", "Passengers") }</li>
<li>@Html.ActionLink("Book A Flight", "SearchFlight", "Flights")}</li>
<li>@Html.ActionLink("Profile", "PassengerProfile", "Passengers")</li>
<li>@Html.ActionLink("Logout", "Logout", "Passengers")</li>


<li><font color="white">@welcomeText</font></li>