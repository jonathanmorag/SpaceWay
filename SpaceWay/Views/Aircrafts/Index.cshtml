@model IEnumerable<SpaceWay.Models.Aircraft>

@{
    ViewBag.Title = "Index";
}
@if ((string)Session["isAdmin"] == "0" || Session["Username"] == null)
{
    <h4>You have no permissions to display this page.</h4>
}
else
{
    <h2>Aircrafts</h2>
    using (Html.BeginForm("Search", "Aircrafts", FormMethod.Post))
    {
        <input type="text" name="lvl" />
        <button type="submit">Filter</button>
    }
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seats)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seats)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AircraftID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AircraftID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AircraftID })
                </td>
            </tr>
        }

    </table>
}
